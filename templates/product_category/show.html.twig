{% extends 'base.html.twig' %}

{% block title %}{{ product_category.name }}{% endblock %}

{% block body %}
    <h1>ProductCategory</h1>

    <table class="table table-dark table-stripped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product_category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product_category.description }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ product_category.creationDate ? product_category.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModificationDate</th>
                <td>{{ product_category.modificationDate ? product_category.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_category_index') }}">back to list</a>

    <a href="{{ path('product_category_edit', {'id': product_category.id}) }}">edit</a>

    {{ include('product_category/_delete_form.html.twig') }}

    <h1>Products in category</h1>
    {% set products = product_category.products %}
    {{ include('product/_product_index_table.html.twig') }}


{% endblock %}
