{% extends 'product_base.html.twig' %}

{% block title %}{{ 'categories' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'product category index' | trans }}</h1>

    <table class="table table-dark table-stripped">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'name' | trans }}</th>
                <th>{{ 'description' | trans }}</th>
                <th>{{ 'creation date' | trans }}</th>
                <th>{{ 'modification date' | trans }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for product_category in product_categories %}
            <tr>
                <td>{{ product_category.id }}</td>
                <td>{{ product_category.name }}</td>
                <td>{{ product_category.description }}</td>
                <td>{{ product_category.creationDate ? product_category.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product_category.modificationDate ? product_category.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('product_category_show', {'id': product_category.id}) }}">{{ 'show' | trans }}</a>
                    <a href="{{ path('product_category_edit', {'id': product_category.id}) }}">{{ 'edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'no records found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_category_new') }}">{{ 'create new' | trans }}</a>
{% endblock %}
