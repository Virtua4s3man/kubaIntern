{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table table-dark table-stripped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ book.year }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ book.country }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author.getAuthorDisplay() }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ book.genre.name }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ book.available ? 'Dostępna' : 'Wypożyczona' }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ book.creation | date('Y M d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Last modified at</th>
                <td>{{ book.creation | date('Y M d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">back to list</a>

    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
