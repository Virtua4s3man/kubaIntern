
{{ include('product/wishlist/_clear_form.html.twig') }}
<table class="table table-dark table-stripped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>CreationDate</th>
        <th>ModificationDate</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.creationDate ? product.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ product.modificationDate ? product.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                {{ include('product/wishlist/_add_form.html.twig') }}
                {% if product.id in ids_on_wishlist %}
                    {{ include('product/wishlist/_delete_form.html.twig') }}
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>