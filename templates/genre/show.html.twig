{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <h1>Genre</h1>

    <table class="table table-dark table-stripped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
            <tr>
                <th>Amount of Books from genre</th>
                <td>{{ genre.books | length }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ genre.description }}</td>
            </tr>
            <tr>
                <th>Modification count</th>
                <td> {#todo modification count#} </td>
            </tr>
            <tr>
                <th>Creation Data</th>
                <td> {{ genre.creation | date('Y M d H:i:s')}} </td>
            </tr>
            <tr>
                <th>Last modification date</th>
                <td> {{ genre.modification | date('Y M d H:i:s') }} </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('genre_index') }}">back to list</a>

    <a href="{{ path('genre_edit', {'id': genre.id}) }}">edit</a>

    {{ include('genre/_delete_form.html.twig') }}

    <h1>Books in genre</h1>

    <table class="table table-dark table-stripped">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publishment Year</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for book in genre.books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author.getAuthorDisplay() }}</td>
                <td>{{ book.year }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
