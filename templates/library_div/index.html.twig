<div>
    <ul>
        <li><a href="{{ path('book_index') }}">strona g≈Çowna</a></li>
        <li>
            <a href="{{ path('author_index') }}">Authors</a>
            <ul>
                {% for author in authors %}
                    <li><a href="{{ path('author_show', {'id':author.id}) }}">{{ author.getAuthorDisplay()}}</a></li>
                {% endfor %}
            </ul>
        </li>
        <li>
            <a href="{{ path('book_index') }}">Books</a>
            <ul>
                {% for book in books %}
                    <li><a href="{{ path('book_show', {'id':book.id}) }}">{{ book.title}}</a></li>
                {% endfor %}
            </ul>
        </li>
        <li>
            <a href="{{ path('genre_index') }}">Genres</a>
            <ul>
                {% for genre in genres %}
                    <li><a href="{{ path('genre_show', {'id':genre.id}) }}">{{ genre.name}}</a></li>
                {% endfor %}
            </ul>
        </li>
    </ul>
    <form method="POST" action="{{ path('randomBook') }}">
        <input type="hidden" name="_token" value="{{ csrf_token('random') }}">
        <button class="btn btn-success">{{ 'go to random book' | trans }}</button>
    </form>
</div>
{% if last_random_book != null %}
    <div>
        <a href="{{ url('book_show', {'id':last_random_book}) }}">
            {{ 'Last drawn book' | trans }}
        </a>
    </div>
{% endif %}